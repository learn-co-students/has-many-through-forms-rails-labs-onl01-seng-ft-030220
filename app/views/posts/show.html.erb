<h1><%= @post.title %></h1><br>
<h2><%= @post.content %></h2><br>

<h3>Categories</h3>
<ul>
    <% @post.categories.each do |cat| %>
        <li><%= cat.name %></li><br>
    <% end %>
</ul>

<h3>Comments</h3>
<ul>
    <% @post.comments.each do |com| %>
        <li><%= com.content %></li><br>
    <% end %>
</ul>

<h3>Users</h3>
<ul>
    <% @post.users.uniq.each do |user| %>
        <li><%= link_to user.username, user_path(user) %></li><br>
    <% end %>
</ul>
